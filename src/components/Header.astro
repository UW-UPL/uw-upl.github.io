---
let pathname = new URL(Astro.request.url).pathname;

if (pathname.endsWith("/")) {
  pathname = pathname.slice(0, -1);
}
const currentPath = pathname.slice(1);
---

<div class="header">
  <a href="/">
    <img class="logo" src="/img/uplLogo.svg" alt="UPL Logo" />
  </a>
  <div class="nav">
    <a class={currentPath === "" ? "nav-active" : ""} href="/">Home</a>
    <a class={currentPath === "events" ? "nav-active" : ""} href="/events">Events</a>
    <a class={currentPath === "resources" ? "nav-active" : ""} href="/resources">Resources</a>
    <a class={currentPath === "projects" ? "nav-active" : ""} href="/projects">Projects</a>
    <a class={currentPath === "blog" ? "nav-active" : ""} href="/blog">Blog</a>
    <a class={currentPath === "coords" ? "nav-active" : ""} href="/coords">Coords</a>
    <a class={currentPath === "hours" ? "nav-active" : ""} href="/hours">Hours</a>
  </div>
</div>
